<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sport">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnStepCount"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:onClick="goMap"
                    app:srcCompat="@drawable/map" />
                <ImageButton
                    android:id="@+id/btnMap"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="261dp"
                    android:onClick="goStepPage"
                    app:srcCompat="@drawable/step" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:rotationX="0"
                android:text="Тренировка"
                android:textAlignment="center"
                android:textColor="#3ABC40"
                android:textSize="35sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="261dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Время тренировки:"
                android:textAlignment="center"
                android:textColor="#3ABC40"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/time"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="40dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="-20dp"
                    android:layout_marginTop="35dp"
                    android:text= "минут"
                    android:textColor="#3ABC40"
                    android:textSize="25sp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnRun"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#2CBD32"
                android:onClick="runClick"
                android:text="Бег"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#4CAF50"
                app:iconTint="#4CAF50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnGo"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#2CBD32"
                android:onClick="goClick"
                android:text="Ходьба"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#4CAF50"
                app:iconTint="#4CAF50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnSwimm"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#2CBD32"
                android:onClick="swimmClick"
                android:text="Плавание"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#4CAF50"
                app:iconTint="#4CAF50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <Button
                android:id="@+id/btnRunD"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#2CBD32"
                android:onClick="runDClick"
                android:text="Беговая дорожка"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#4CAF50"
                app:iconTint="#4CAF50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnCycleTren"
                android:layout_width="350dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#2CBD32"
                android:onClick="cycleTrenClick"
                android:text="Велотренажер"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#4CAF50"
                app:iconTint="#4CAF50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnEllipTren"
                android:layout_width="350dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#2CBD32"
                android:onClick="ellipTrenClick"
                android:text="Эллиптический тренажер"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#4CAF50"
                app:iconTint="#4CAF50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnForce"
                android:layout_width="350dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#2CBD32"
                android:onClick="forceClick"
                android:text="Силовые тренажеры"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#4CAF50"
                app:iconTint="#4CAF50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnCircle"
                android:layout_width="350dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="14dp"
                android:backgroundTint="#2CBD32"
                android:onClick="circleClick"
                android:text="Круговая тренировка"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColorHighlight="#FFFFFF"
                android:textColorLink="#4CAF50"
                app:iconTint="#4CAF50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnMainFromSport"
                    android:layout_width="103dp"
                    android:layout_height="103dp"
                    android:onClick="btnSportMainMenuClick"
                    app:srcCompat="@drawable/gs" />

                <ImageButton
                    android:id="@+id/btnSportFromSport"
                    android:layout_width="103dp"
                    android:layout_height="103dp"
                    android:onClick="btnSportSportMenuClick"
                    app:srcCompat="@drawable/t" />

                <ImageButton
                    android:id="@+id/btnDishesFromSport"
                    android:layout_width="103dp"
                    android:layout_height="103dp"
                    android:onClick="btnDishesMainMenuClick"
                    app:srcCompat="@drawable/r" />

                <ImageButton
                    android:id="@+id/btnFoodFromFood"
                    android:layout_width="103dp"
                    android:layout_height="103dp"
                    android:onClick="btnFoodMenuClick"
                    app:srcCompat="@drawable/dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>